<div class="subpage-title">
    <h5>@Html.TitleForPage(T("Lost Password").ToString())</h5>
</div>

<p>@T("Please enter your username or email address. You will receive a link to create a new password via email.")</p>

@using (Html.BeginFormAntiForgeryPost(Url.Action("RequestLostPassword"), FormMethod.Post, new { @class = "col-xs-12 col-md-6" })) {
    <div class="form-group">
        <label for="username-email" class="control-label">@T("Username or Email")</label>
        @Html.TextBox("username", "", new { @class = "form-control", id = "username", autofocus = "autofocus", placeholder = "Username or Email" })
        @Html.ValidationMessage("username")
    </div>
    <button type="submit" class="btn btn-default">@T("Send Request")</button>
} 